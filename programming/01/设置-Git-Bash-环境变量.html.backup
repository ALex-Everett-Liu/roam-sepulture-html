        }

        .toc-link:hover {
            background-color: #f1f5f9;
            color: var(--accent-color);
            border-left-color: var(--accent-color);
        }

        .toc-link.active {
            background-color: #eff6ff;
            color: var(--accent-color);
            border-left-color: var(--accent-color);
            font-weight: 500;
        }

        .toc-link.level-2 {
            margin-left: 1rem;
            font-size: 0.85rem;
        }

        .content-area {
            background: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .section {
            margin-bottom: 3rem;
            scroll-margin-top: 2rem;
        }

        .section h2 {
            font-size: 1.8rem;
