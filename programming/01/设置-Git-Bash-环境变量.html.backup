        .toc-list {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .toc-item {
            margin: 0.25rem 0;
        }

        .toc-link {
            display: block;
            padding: 0.5rem 0.75rem;
            color: var(--secondary-color);
            text-decoration: none;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: all 0.3s ease;
